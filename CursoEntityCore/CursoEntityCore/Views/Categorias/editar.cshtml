@model CursoEntityCore.Models.Categoria
@{
    ViewData["Title"] = "Editar categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <h3 class="text-center">Editar una categoría</h3>
    <form method="post" asp-action="Editar">
        <!--Importante para editar-->
        <input type="hidden" asp-for="Categoria_Id" />

        <div class="row justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 col-md-8 mt-4">
                <div class="row mb-3">
                    <div class="col-4">
                        <label asp-for="Nombre"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-4">
                        <label asp-for="Activo"></label>
                    </div>
                    <div class="col-8">
                        <p>
                            <input type="radio" asp-for="Activo" value="false" />
                            Inactivo
                        </p>
                        <span asp-validation-for="Activo" class="text-danger"></span>

                        <p>
                            <input type="radio" asp-for="Activo" value="true" />
                            Activo
                        </p>
                        <span asp-validation-for="Activo" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-between align-items-center mt-4">
            <div class="col-4 text-start">
                <a asp-action="Index" class="btn btn-link">Volver a lista</a>
            </div>
            <div class="col-4 text-end">
                <button type="submit" class="btn btn-primary form-control">Editar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
